@using Microsoft.AspNetCore.Identity
@using Movielandia.Models

@inject SignInManager<MovielandiaUser> SignInManager
@inject UserManager<MovielandiaUser> UserManager

@if (SignInManager.IsSignedIn(User))
{

    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="form-inline my-2 my-lg-0">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
            </li>
            <li class="nav-item"><a class="nav-link" asp-controller="Orders" asp-action="MyOrders">My Orders</a></li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav" style="padding-left: 700%">
        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}
