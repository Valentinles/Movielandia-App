@model Movielandia.Common.ViewModels.EditMovieViewModel
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<main class="mt-3">
    <h1 class="text-center">Delete Movie</h1>
    <hr class="hr-2 bg-dark" />
    <form class="mx-auto w-50" method="post">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input class="form-control" asp-for="Title" placeholder="Title..." disabled="disabled">
        </div>
        <div class="form-group">
            <label asp-for="Creator"></label>
            <input class="form-control" asp-for="Creator" placeholder="Creator..." disabled="disabled">
        </div>
        <div class="form-group">
            <label></label>
            <textarea class="form-control" rows="4" placeholder="Storyline..." asp-for="Storyline" disabled="disabled"></textarea>
        </div>
        
        <div class="mt-4 d-flex justify-content-center">
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </form>
</main>