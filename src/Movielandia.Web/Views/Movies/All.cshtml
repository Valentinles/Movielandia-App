@model Movielandia.Common.ViewModels.MovieOrderViewModel
@{
    ViewData["Title"] = "All";
}

<h2>All</h2>

<main class="mt-3 mb-5 container">
    <h1 class="text-center">Movies tickets</h1>
    <hr class="hr-2 eventures-bg-color" />
    <table class="table table-hover">
        <thead>
            <tr class="row font-weight-bold">
                <th class="col-md-2">Title</th>
                <th class="col-md-2">Ticket Price</th>
                <th class="col-md-2">Available tickets</th>
                <th class="col-md-2">Tickets</th>
            </tr>
        </thead>
        <tbody>
            @{
                var orders = Model.Movies as Movielandia.Common.ViewModels.AllMoviesViewModel[] ?? Model.Movies.ToArray();
            }
            @for (int i = 0; i < orders.Length; i++)
            {
                var m = orders[i];

                <tr class="row">
                    <td class="col-md-2"><a asp-controller="Movies" asp-action="Details" asp-route-id="@m.Id">@m.Title</a></td>
                    <td class="col-md-2">@m.TicketPrice</td>
                    <td class="col-md-2">@m.TotalTickets</td>
                    <td class="col-md-3">
                        @await Html.PartialAsync("_OrderPartial", new Movielandia.Common.ViewModels.MakeOrderBindingModel
                        {
                            MovieId = m.Id
                        })
                    </td>
                </tr>
            }
        </tbody>
    </table>


