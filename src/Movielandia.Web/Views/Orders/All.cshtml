@model IEnumerable<Movielandia.Common.ViewModels.OrdersViewModel>
@{
    ViewData["Title"] = "All";
}

<main class="mt-3 mb-5 container">
    <h1 class="text-center">All Orders</h1>
    <table class="table table-hover">
        <thead>
            <tr class="row font-weight-bold">
                <th class="col-md-3">Movie</th>
                <th class="col-md-3">User</th>
                <th class="col-md-3">Tickets bought</th>
                <th class="col-md-3">Purchase date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
            <tr class="row">
                <td class="col-md-3"><a asp-controller="Movies" asp-action="Details" asp-route-id="@m.MovieId">@m.Movie</a></td>
                <td class="col-md-3">@m.User</td>
                <td class="col-md-3">@m.TicketCount</td>
                <td class="col-md-3">@m.CreatedOn</td>

            </tr>
            }
        </tbody>
    </table>
</main>